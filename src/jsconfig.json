{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"],
      "#/*": ["./modules/*"],
      "parts/*": ["./parts/*"],
      "pages/*": ["./pages/*"],
      "conf/*": ["./../config/*"],
    },
    "target": "es5",
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es2018.promise",
      "es2015.proxy",
      "es2016",
      "es2016.array.include",
      "es2017",
      "es2018",
    ],
  },
  "include": [
    "./"
  ],
  "exclude": [
    "node_modules"
  ]
}
